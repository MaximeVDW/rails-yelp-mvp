<div class="navbar">
  <h1>Restaurant#index</h1>
  <p><%= link_to 'Create', new_restaurant_path %></p>
</div>

<div class="resto_card">
  <% @restaurants.each do |restaurant| %>
    <div>
      <p><%= link_to restaurant.name, restaurant_path(restaurant) %></p>
      <p><%= restaurant.category %></p>
      <p><%= restaurant.address %></p>
      <p><%= restaurant.phone_number %></p>
      <p><%= link_to 'Comment', new_restaurant_review_path(restaurant) %></p>
      <p><%= link_to 'Edit', edit_restaurant_path(restaurant) %></p>
      <p><%= link_to 'Delete', restaurant_path(restaurant) %></p>
    </div>
  <% end %>
</div>

